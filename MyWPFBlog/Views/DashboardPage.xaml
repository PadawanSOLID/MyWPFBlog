<Page
    x:Class="MyWPFBlog.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyWPFBlog.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:MyWPFBlog.ViewModels"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="900"
    d:DesignWidth="1200"
    Foreground="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--  left pane  -->
        <StackPanel Width="320" Margin="40">

            <ui:ImageIcon Height="320" Source="/Asserts/avatar.jpg">
                <ui:ImageIcon.Clip>
                    <EllipseGeometry
                        Center="160 160"
                        RadiusX="160"
                        RadiusY="160" />
                </ui:ImageIcon.Clip>
            </ui:ImageIcon>
            <ui:TextBlock
                Margin="0,20,0,10"
                FontSize="25"
                Foreground="White"
                Text="{Binding UserName}" />
            <ui:TextBlock
                Margin="0,10"
                FontSize="20"
                Foreground="White"
                Text="{Binding Bio}" />
            <ui:Button
                Margin="0,10"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Content="Edit Profile"
                CornerRadius="5" />
            <StackPanel Orientation="Horizontal">
                <ui:HyperlinkButton Foreground="White">
                    <ui:TextBlock>
                        <Run BaselineAlignment="Center" FontFamily="Segoe Fluent Icons">&#xE716;</Run>
                        <Run Text="{Binding FollowerCount}" />
                        followers</ui:TextBlock>
                </ui:HyperlinkButton>
                <ui:TextBlock Text="." />
                <ui:HyperlinkButton Foreground="White">
                    <ui:TextBlock>
                        <Run Text="{Binding FollowingCount}" />
                        following</ui:TextBlock>
                </ui:HyperlinkButton>
            </StackPanel>
            <Separator Margin="0,10" />
            <ui:TextBlock Foreground="White" Text="Achievements" />
            <ItemsControl ItemsSource="{Binding Achievements}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse
                            Width="60"
                            Height="60"
                            Margin="5"
                            Cursor="Hand">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding Image}" />
                            </Ellipse.Fill>
                            <Ellipse.ToolTip>
                                <ToolTip
                                    Width="400"
                                    MaxWidth="1000"
                                    Placement="Top">
                                    <StackPanel Width="380">
                                        <Grid Height="200" Background="{Binding Color}">
                                            <Ellipse
                                                Width="120"
                                                Height="120"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Stroke="White"
                                                StrokeThickness="5">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding Image}" />
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                        <StackPanel Margin="10">
                                            <ui:TextBlock
                                                Margin="0,10"
                                                FontSize="25"
                                                FontWeight="Bold"
                                                Text="{Binding Name}" />
                                            <ui:TextBlock Margin="0,10" Text="{Binding Description}" />
                                            <Separator Margin="0,10" />
                                        </StackPanel>
                                    </StackPanel>
                                </ToolTip>
                            </Ellipse.ToolTip>
                        </Ellipse>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator Margin="0,10" />
            <ui:TextBlock Foreground="White" Text="Organizations" />
            <ItemsControl ItemsSource="{Binding Organizations}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle
                            Width="40"
                            Height="40"
                            Margin="5"
                            Cursor="Hand"
                            RadiusX="4"
                            RadiusY="4">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="{Binding Image}" />
                            </Rectangle.Fill>
                            <Rectangle.ToolTip>
                                <ToolTip MaxWidth="1200">
                                    <StackPanel>
                                        <DockPanel Margin="5">
                                            <Rectangle
                                                Width="60"
                                                Height="60"
                                                Margin="5"
                                                Cursor="Hand"
                                                RadiusX="4"
                                                RadiusY="4">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="{Binding Image}" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <StackPanel>
                                                <ui:TextBlock
                                                    Margin="5"
                                                    FontSize="16"
                                                    Text="{Binding Name}" />
                                                <ui:TextBlock Margin="5" Text="{Binding Description}" />
                                            </StackPanel>

                                        </DockPanel>
                                        <Separator Margin="0,5" />
                                        <StackPanel Margin="5" Orientation="Horizontal">
                                            <ui:TextBlock Margin="5,0">
                                                <Run
                                                    BaselineAlignment="Center"
                                                    FontFamily="Segoe Fluent Icons"
                                                    Text="&#xe780;" />
                                                <Run Text="{Binding RepoCount}" />
                                                repositories</ui:TextBlock>
                                            <ui:TextBlock Margin="5,0">
                                                <Run
                                                    BaselineAlignment="Center"
                                                    FontFamily="Segoe Fluent Icons"
                                                    Text="&#xe77b;" />
                                                <Run Text="{Binding MemberCount}" />
                                                members</ui:TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </ToolTip>
                            </Rectangle.ToolTip>
                        </Rectangle>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!--  right pane  -->


        <StackPanel Grid.Column="1" Margin="20">
            <ui:TextBlock FontFamily="18" Text="Pinned" />
            <ItemsControl ItemsSource="{Binding PinnedBlogs}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="5"
                            BorderBrush="LightGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Margin="3" Symbol="Book24" />
                                    <ui:HyperlinkButton Margin="3">
                                        <ui:TextBlock Text="{Binding Title}" />
                                    </ui:HyperlinkButton>
                                </StackPanel>
                                <ui:TextBlock
                                    Grid.Row="1"
                                    Margin="5"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                                <UniformGrid
                                    Grid.Row="2"
                                    HorizontalAlignment="Left"
                                    Rows="1">
                                    <ui:HyperlinkButton Margin="3">
                                        <ui:TextBlock>
                                            <Run FontFamily="Segoe Fluent Icons" Text="&#xE8E1;" />
                                            <Run Text="{Binding LikeCount}" />
                                        </ui:TextBlock>
                                    </ui:HyperlinkButton>
                                    <ui:HyperlinkButton Margin="3">
                                        <ui:TextBlock>
                                            <Run FontFamily="Segoe Fluent Icons" Text="&#xE734;" />
                                            <Run Text="{Binding FavoriteCount}" />
                                        </ui:TextBlock>
                                    </ui:HyperlinkButton>
                                    <ui:HyperlinkButton Margin="3">
                                        <ui:TextBlock>
                                            <Run FontFamily="Segoe Fluent Icons" Text="&#xE8f2;" />
                                            <Run Text="{Binding CommentCount}" />
                                        </ui:TextBlock>
                                    </ui:HyperlinkButton>
                                </UniformGrid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ui:TextBlock
                Margin="0,10"
                FontFamily="18"
                Text="Statistics" />
            <ItemsControl ItemsSource="{Binding Statistics}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:Card Margin="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <ui:SymbolIcon FontSize="30" Symbol="{Binding Symbol}" />
                                <ui:TextBlock
                                    Grid.Row="1"
                                    FontSize="30"
                                    Text="{Binding Count}"
                                    TextAlignment="Center" />
                                <ui:TextBlock
                                    Grid.Row="2"
                                    Text="{Binding Type}"
                                    TextAlignment="Center" />
                            </Grid>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <lvc:PolarChart
                Height="500"
                AngleAxes="{Binding StatisticsAngleAxes}"
                RadiusAxes="{Binding StatisticsRadialAxes}"
                Series="{Binding StatisticsSeries}" />

            <ui:TextBlock
                Margin="0,10"
                FontFamily="18"
                Text="Activities" />

            <lvc:CartesianChart Series="{Binding ActivitySeries}" Height="500"/>

        </StackPanel>


    </Grid>
</Page>
